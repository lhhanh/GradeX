<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="42dp"
    app:cardCornerRadius="5dp"
    android:elevation="30dp"
    android:id="@+id/parent"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/testIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_chemistry"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textTestName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Thi học kỳ Hóa"
            android:textSize="11sp"
            android:textColor="#FF000000"
            app:layout_constraintStart_toEndOf="@+id/testIcon"
            app:layout_constraintTop_toTopOf="@+id/testIcon" />

        <TextView
            android:id="@+id/textClassName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12L1"
            android:textSize="11sp"
            android:textColor="#FF000000"
            app:layout_constraintStart_toStartOf="@+id/textTestName"
            app:layout_constraintTop_toBottomOf="@+id/textTestName" />

        <ImageView
            android:id="@+id/saveIcon"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_bookmarked"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textTestName"
            app:layout_constraintTop_toTopOf="@+id/testIcon" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>